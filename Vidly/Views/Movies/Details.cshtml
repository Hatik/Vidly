@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <ul>
        <li>Genre: @Model.Genre.Name</li>
        <li>Release Date: @Html.ValueFor(model => Model.ReleaseDate, "{0:dd/MM/yyyy}")</li>
        <li>Date Added: @Html.ValueFor(model => Model.DateAdded, "{0:dd/MM/yyyy}")</li>
        <li>Number in Stock: @Model.NumberInStock</li>
    </ul>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
